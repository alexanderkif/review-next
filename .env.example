# Example environment variables file for portfolio site
# Copy this file to .env.local and fill with real values

# =============================================================================
# POSTGRESQL DATABASE (VERCEL)
# =============================================================================
# Get these values from Vercel panel after creating Postgres database
POSTGRES_URL="postgresql://username:password@host:5432/database_name"
POSTGRES_PRISMA_URL="postgresql://username:password@host:5432/database_name?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://username:password@host:5432/database_name"
POSTGRES_USER="username"
POSTGRES_HOST="host"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database_name"

# =============================================================================
# NEXTAUTH CONFIGURATION (REQUIRED)
# =============================================================================
NEXTAUTH_URL="http://localhost:3000"  # В продакшене: https://yourdomain.vercel.app
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production-minimum-32-characters"

# =============================================================================
# OAUTH PROVIDERS (OPTIONAL)
# =============================================================================
# GitHub OAuth - get in GitHub Developer settings
GITHUB_ID="your-github-app-id"
GITHUB_SECRET="your-github-app-secret"

# Google OAuth - get in Google Cloud Console
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# EMAIL CONFIGURATION (REQUIRED FOR REGISTRATION)
# =============================================================================
# For sending email confirmation letters during registration

# Gmail SMTP (recommended for development)
# 1. Enable 2FA in Gmail
# 2. Create App Password: https://myaccount.google.com/apppasswords
# 3. Use App Password in EMAIL_PASS, NOT regular account password
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-16-digit-app-password"  # Gmail App Password (16 characters)
EMAIL_FROM="Review Site <your-email@gmail.com>"

# Alternative: configure your SMTP server for production
SMTP_HOST="smtp.gmail.com"  # or smtp.your-provider.com
SMTP_PORT="587"
SMTP_SECURE="false"  # true for port 465, false for 587
SMTP_USER="your-email@gmail.com"  # usually same as EMAIL_USER
SMTP_PASS="your-16-digit-app-password"  # usually same as EMAIL_PASS

# Site URL for email links
NEXTAUTH_URL="http://localhost:3000"  # В продакшене: https://yourdomain.com

# =============================================================================
# ADDITIONAL SETTINGS
# =============================================================================
# Domain for cookies in production
DOMAIN="localhost"